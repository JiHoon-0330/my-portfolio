// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int         @id @default(autoincrement())
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  email     String      @unique
  provider  String
  items     Item[]
  sells     Sell[]
  dividends Dividends[]
}

model Item {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  user        User     @relation(fields: [userEmail], references: [email])
  userEmail   String
  code        String
  name        String
  typeCode    String
  typeName    String
  url         String
  reutersCode String
  nationCode  String?
  nationName  String?
  buyPrice    Float
  quantity    Float
}

model Sell {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  user        User     @relation(fields: [userEmail], references: [email])
  userEmail   String
  code        String
  name        String
  typeCode    String
  typeName    String
  url         String
  reutersCode String
  nationCode  String?
  nationName  String?
  sellPrice   Float
  quantity    Float
}

model Dividends {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userEmail], references: [email])
  userEmail String
  price     Float
}
